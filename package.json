{
  "name": "nhs-medicines-scraper",
  "version": "1.0.0",
  "private": true,
  "description": "Minimal NHS medicines scraper with Playwright",
  "type": "module",
  "engines": {
    "node": ">=25"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsdown src/index.ts --format esm --dts --sourcemap --clean --target node25",
    "start": "node dist/index.mjs",
    "scrape": "tsx src/index.ts",
    "docker:build": "docker build -t nhs-medicines-scraper .",
    "deps:check": "pnpm outdated",
    "typecheck": "tsgo --noEmit",
    "test": "vitest run",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "oxlint .",
    "knip": "knip",
    "prepare": "husky"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "dotenv": "^17.3.1",
    "p-queue": "^9.1.0",
    "p-retry": "^7.1.1",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "playwright": "^1.58.2",
    "tsdown": "^0.20.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@typescript/native-preview": "7.0.0-dev.20260219.1",
    "husky": "^9.1.7",
    "knip": "^5.84.1",
    "oxlint": "^1.49.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.22.0"
}